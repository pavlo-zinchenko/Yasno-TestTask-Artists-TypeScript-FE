{
  "include": [
    "src",
    "vite-env.d.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "target": "es2020",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@common/*": [
        "src/components/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@constants": [
        "src/constants/index.ts"
      ],
      "@enums": [
        "src/enums/index.ts"
      ],
      "@interfaces": [
        "src/interfaces/index.ts"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@slices/*": [
        "src/store/slices/*"
      ],
      "@types": [
        "src/types/index.ts"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@validations/*": [
        "src/validations/*"
      ]
    }
  }
}